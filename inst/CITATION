  url = "https://github.com/DanielAlhassan/idDMR",
  textVersion = paste("Alhassan et. al (2022)", "idDMR: Methylation Analysis Methods for Illumina Microarray Data.", "version 0.5.0",
"https://github.com/DanielAlhassan/idDMR")
)


