  title    = "Differential Methylation Region Detection via an Array-adaptive Normalized Kernel-weighted Model",
  author   = personList(as.person("Daniel Alhassan"), as.person("Gayla Olbricht"), as.person("Akim Adekpedjou")),
  note  = "Unpublished Manuscript",
  year = "2022",
  textVersion = paste("Alhassan et. al (2022).", "Differential Methylation Region Detection via an Array-adaptive Normalized Kernel-weighted Model", "Unpublished Manuscript")
)


